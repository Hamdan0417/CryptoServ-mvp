# Database
DATABASE_URL="postgresql://serv:serv@localhost:5432/crypto_serv"
SHADOW_DATABASE_URL="postgresql://serv:serv@localhost:5432/crypto_serv_shadow"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_RATE_LIMIT_NAMESPACE="crypto-serv-rate-limit"
REDIS_SESSION_NAMESPACE="crypto-serv-session"

# MinIO / S3 compatible storage
S3_ENDPOINT="http://localhost:9000"
S3_REGION="us-east-1"
S3_ACCESS_KEY="minio"
S3_SECRET_KEY="minio123"
S3_BUCKET_COMPLIANCE="crypto-serv-compliance"
S3_BUCKET_PUBLIC="crypto-serv-public"

# JWT & Auth
JWT_ACCESS_TOKEN_TTL="15m"
JWT_REFRESH_TOKEN_TTL="7d"
JWT_SECRET="change-me-in-production"
SESSION_COOKIE_NAME="crypto-serv-session"
SESSION_COOKIE_SECRET="change-me-too"
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# SIWE (Sign-In with Ethereum)
SIWE_DOMAIN="localhost"
SIWE_URI="http://localhost:3000"
SIWE_STATEMENT="Sign in to Crypto Serv"
SIWE_VERSION="1"
SIWE_CHAIN_ID="1"
SIWE_EXPIRATION_MINUTES="15"

# Web3 Providers
WEB3_RPC_URL="https://mainnet.infura.io/v3/YOUR_KEY"
WEB3_CHAIN_ID="1"

# KYC / Compliance Provider Stubs
KYC_PROVIDER_API_KEY="local-kyc-key"
KYC_PROVIDER_WEBHOOK_SECRET="local-webhook-secret"
KYC_WEBHOOK_URL="http://localhost:3000/api/kyc/webhook"

# Email / Notifications
SENDGRID_API_KEY="local-sendgrid"
SUPPORT_EMAIL="support@crypto-serv.local"

# Feature Flags
FEATURE_FLAG_STAKING="false"
FEATURE_FLAG_RECOVERY_DESK="false"
