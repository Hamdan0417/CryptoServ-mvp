{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@crypto-serv/ui/*": ["../ui/src/*"],
      "@crypto-serv/utils/*": ["../utils/src/*"]
    }
  },
  "include": ["src", "app", "pages", "next-env.d.ts", "*.ts", "*.tsx"],
  "exclude": ["node_modules", "dist", "build"]
}
